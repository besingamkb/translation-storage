    "components": {
        "schemas": {
            "Locale": {
                "required": [
                    "id",
                    "name",
                    "code"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "English"
                    },
                    "code": {
                        "type": "string",
                        "example": "en"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    }
                },
                "type": "object"
            },
            "TranslationValue": {
                "required": [
                    "key",
                    "value",
                    "locale"
                ],
                "properties": {
                    "key": {
                        "type": "string",
                        "example": "key.name"
                    },
                    "value": {
                        "type": "string",
                        "example": "Hello World"
                    },
                    "locale": {
                        "type": "string",
                        "example": "en_US"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "example": [
                            "tag1",
                            "tag2"
                        ]
                    }
                },
                "type": "object"
            }
